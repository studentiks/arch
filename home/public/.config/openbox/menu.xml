<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="system-menu" label="System">
		<item label="Openbox Configuration Manager">
			<action name="Execute">
				<command>obconf</command>
				<startupnotify>
					<enabled>yes</enabled>
				</startupnotify>
			</action>
		</item>
		<item label="Openbox Menu Configuration">
			<action name="Execute">
				<execute>obmenu</execute>
			</action>
		</item>
		<item label="wallpaper">
			<action name="Execute">
				<execute>~/.config/openbox/wallpaper.sh</execute>
			</action>
		</item>
		<item label="Tint2 Configuration">
			<action name="Execute">
				<execute>tint2conf</execute>
			</action>
		</item>
		<item label="sbxkb restart">
			<action name="Execute">
				<execute>sh -c &quot;killall -SIGUSR1 sbxkb;nohup 2&gt;/dev/null 1&gt;/dev/null sbxkb &amp;&quot;</execute>
			</action>
		</item>
		<item label="screen on">
			<action name="Execute">
				<execute>~/.config/openbox/screen_on.sh</execute>
			</action>
		</item>
		<item label="screen off">
			<action name="Execute">
				<execute>~/.config/openbox/screen_off.sh</execute>
			</action>
		</item>
		<item label="Reconfigure Openbox">
			<action name="Reconfigure"/>
		</item>
	</menu>
	<menu id="root-menu" label="Openbox">
		<menu id="client-list-combined-menu"/>
		<separator/>
		<item label="xterm">
			<action name="Execute">
				<execute>xterm </execute>
			</action>
		</item>
		<item label="mc">
			<action name="Execute">
				<execute>xterm -e mc</execute>
			</action>
		</item>
		<item label="bluefish">
			<action name="Execute">
				<execute>bluefish</execute>
			</action>
		</item>
		<item label="speedcrunch">
			<action name="Execute">
				<execute>speedcrunch</execute>
			</action>
		</item>
		<item label="spacefm">
			<action name="Execute">
				<execute>spacefm</execute>
			</action>
		</item>
		<separator/>
		<item label="opera">
			<action name="Execute">
				<execute>opera</execute>
			</action>
		</item>
		<item label="chromium">
			<action name="Execute">
				<execute>chromium</execute>
			</action>
		</item>
		<item label="teamviewer">
			<action name="Execute">
				<execute>sh -c &quot;sudo teamviewer --daemon start; teamviewer; sudo teamviewer --daemon stop&quot;</execute>
			</action>
		</item>
		<item label="libreoffice">
			<action name="Execute">
				<execute>libreoffice</execute>
			</action>
		</item>
		<item label="gimp">
			<action name="Execute">
				<execute>gimp</execute>
			</action>
		</item>
		<separator/>
		<item label="deadbeef">
			<action name="Execute">
				<execute>deadbeef</execute>
			</action>
		</item>
		<item label="spotify">
			<action name="Execute">
				<execute>spotify</execute>
			</action>
		</item>
		<item label="skype">
			<action name="Execute">
				<execute>skype</execute>
			</action>
		</item>
		<item label="viber">
			<action name="Execute">
				<execute>viber</execute>
			</action>
		</item>
		<item label="smplayer">
			<action name="Execute">
				<execute>smplayer</execute>
			</action>
		</item>
		<item label="deluge">
			<action name="Execute">
				<execute>deluge</execute>
			</action>
		</item>
		<separator/>
		<item label="steam">
			<action name="Execute">
				<execute>primusrun steam</execute>
			</action>
		</item>
		<item label="factorio">
			<action name="Execute">
				<execute>primusrun /home/public/factorio/bin/x64/factorio</execute>
			</action>
		</item>
		<item label="minecraft">
			<action name="Execute">
				<execute>primusrun java -jar /home/public/.minecraft/launcher.jar</execute>
			</action>
		</item>
		<item label="gcompris">
			<action name="Execute">
				<execute>gcompris</execute>
			</action>
		</item>
		<item label="weston">
			<action name="Execute">
				<execute>weston</execute>
			</action>
		</item>
		<separator/>
		<menu id="system-menu"/>
		<separator/>
		<item label="Exit">
			<action name="Execute">
				<execute>~/.config/openbox/logout.sh</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
